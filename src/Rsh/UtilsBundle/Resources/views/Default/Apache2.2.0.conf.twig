<VirtualHost *:80>
    ServerName {{ name }}
    DocumentRoot {{ webrootPath }}

    <Directory {{ webrootPath }}>
        Options -Indexes +FollowSymLinks +MultiViews
        AllowOverride All
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/error.log

    LogLevel warn
    CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>